{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/auth/(.*)",
            "dest": "/routes/authRoutes.js"
        },
        {
            "src": "/posts/(.*)",
            "dest": "/routes/postRoutes.js"
        },
        {
            "src": "/home",
            "dest": "/app.js"
        },
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/:1"
        }
    ]
}